@{
}
@model IEnumerable<WebProje.Entities.Arac>
@section Resim{

    <div id="sectionresimaraba">
        <div id="sectionyazi" class="row">
            <div class="col-6">
                <div style="text-shadow: 12px 5px 6px rgb(11, 23, 51);">ARABALAR</div>
            </div>
            

            <div class="dropdown col-4 text-center text-black ">
              <button id="filtre" class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                Filtrele
              </button>
              <ul  class="dropdown-menu">
                    <li><div  class="btn  col-1  ">@Html.ActionLink("İlk Yüklenen", "Araba", new {  id=1 })</div></li>
                    <li> <div class="btn  col-1 ">@Html.ActionLink("Son Yüklenen", "Araba", new {  id=2 })</div></li>
                    <li><div class="btn  col-1 ">@Html.ActionLink("Yıl (Artan)", "Araba", new {  id=3 })</div></li>
                    <li><div class="btn  col-1 ">@Html.ActionLink("Yıl (Azalan)", "Araba", new {  id=4 })</div></li>
              </ul>
            </div>


            
           
            
            

        </div>
    </div>

   
}

<div id="body">
    <div class="row">

        @foreach (var item in Model)
        {
            <div id="araclist" class="col-xl-6 col-sm-12 ">
                <div id="arac">
                     <div>
                        <img id="aracresmi" src="@item.aracResmi" class="" alt="...">
                            <div class="row text-start">
                                <div class="col-4"></div>
                                <div class="col-2">@Html.DisplayNameFor(model => model.marka)</div>  :
                                <div class="col-2">@Html.DisplayFor(model => item.marka)</div>
                                        
                            </div>
                           <div class="row text-start">
                                <div class="col-4"></div>
                                <div class="col-2">@Html.DisplayNameFor(model => model.model)</div>  :
                                <div class="col-2">@Html.DisplayFor(model => item.model)</div>
                                        
                            </div>
                           <div class="row text-start">
                                <div class="col-4"></div>
                                <div class="col-2">@Html.DisplayNameFor(model => model.yil)</div>  :
                                <div class="col-2">@Html.DisplayFor(model => item.yil)</div>
                                        
                            </div>
                           <div class="row text-start">
                                <div class="col-4"></div>
                                <div class="col-2">@Html.DisplayNameFor(model => model.renk)</div>  :
                                <div class="col-2">@Html.DisplayFor(model => item.renk)</div>
                                        
                            </div>
                            <div class="row text-start text-center">
                                <div class="col-4"></div>
                                <div class="btn btn-success col-4 ">@Html.ActionLink("Kirala", "Detay", new {  id=item.id })</div>
                               
                               
                                        
                            </div>
                       
                           
                     </div>
            
            
            </div> 
        </div>
        }
        


    </div>
   
   

       
       



</div>
  




