@{
    Layout = null;
}

@model WebProje.Entities.Kullanici

<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebProje</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebProje.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Abril+Fatface&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Diplomata+SC&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@500&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@700&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Martian+Mono:wght@700&display=swap" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>

    <script src="~/js/Dil.js"></script>
</head>

<style>

    #container {
        background-image: url("https://www.teahub.io/photos/full/279-2796147_road-wallpaper-1080p.jpg");
        padding-left: 16%;
        padding-right: 16%;
        background-repeat: no-repeat;
        background-position: center center;
        background-attachment: fixed;
    }

    #sectionyazi {
        color: azure;
        font-size: 70px;
        font-family: 'Martian Mono', monospace;
        text-shadow: 12px 5px 6px rgb(11, 23, 51);
        padding-top: 317px;
        padding-left: 17%;
    }

    #log {
        border-radius: 20px;
        box-shadow: 0 0 10px 5px black;
    }
</style>

<div id="container" style="">

    <div style="padding-top:300px; padding-bottom:300px">
        <div id="log" class="row bg-dark">
            <div key="23" class="p-0 text-center" id="sectionyazi">Kaydol</div>
            <div class="col-4"></div>

            <div class="col-4">
                <form asp-asp-controller="Giris" asp-action="KayitIslemi">

                    @if (TempData["hata"] is not null)
                    {
                        <h5 style="color:red">@TempData["hata"]</h5>
                    }

                    <div class="form-group">
                        <label key="24" asp-for="kullaniciAdi" class="control-label text-white">Kullanıcı Adı</label>
                        <input asp-for="kullaniciAdi" class="form-control" required/>
                      
                    </div>
                    <div class="form-group">
                        <label key="25" asp-for="sifre" class="control-label text-white">Şifre</label>
                        <input type="password" asp-for="sifre" class="form-control" required/>
                       
                    </div>
                    <br />
                      <div row>
                        <button key="23" type="submit" class="btn btn-success">Kaydol</button>
                        <a key="21" id="" class="btn btn-primary " asp-area="" asp-controller="Giris" asp-action="KullaniciGiris">Geri Dön</a>
                    </div>
               
                    <div class="col-4"></div>
                    <br />

                </form>
            </div>
        </div>
    </div>


</div>

