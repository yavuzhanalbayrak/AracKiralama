@{
}
@model WebProje.Entities.Kullanici



    <div style="padding-top:300px; padding-bottom:300px" class="">
        <div id="log" class="row bg-dark">

            <div key="22" class="p-0 text-center" id="sectionyazi">Giriş</div>
            <div class="col-4"></div>

            <div class="col-4">
                <form asp-asp-controller="Giris" asp-action="KullaniciGirisKontrol">

                    @if (TempData["Girishata"] is not null)
                    {
                        <h5 style="color:red">@TempData["Girishata"]</h5>
                    }
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label key="24"asp-for="kullaniciAdi" class="control-label text-white"></label>
                        <input asp-for="kullaniciAdi" class="form-control" />
                        <span asp-validation-for="kullaniciAdi" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label key="25"asp-for="sifre" class="control-label text-white"></label>
                        <input type="password" asp-for="sifre" class="form-control" />
                        <span asp-validation-for="sifre" class="text-danger"></span>
                    </div>
                    <br />

                    <div row>
                        <button key="22" type="submit" value="Giriş" class="btn btn-success" >Giriş</button>
                        <a key="23" class="btn btn-primary " asp-area="" asp-controller="Giris" asp-action="Kaydol">Kaydol</a>
                    </div>
                   
                    <br />

                </form>
            </div>
            <div class="col-4"></div>


        </div>

    </div>




@section Scripts {
    @{  await Html.RenderPartialAsync("_ValidationScriptsPartial");
      
    }
}
